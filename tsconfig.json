{
  "compilerOptions": {
    "composite": true,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "assets",
    "skipLibCheck": true,
    "types": [
      "@fastybird/metadata-library",
      "node",
      "pinia",
      "vue",
      "vue-i18n",
      "vue-router"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ]
  },
  "include": [
    "assets/**/*.ts",
    "assets/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
